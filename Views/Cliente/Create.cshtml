@model Cliente
@{
    ViewData["Title"] = "Incluir Cliente";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Documento)
        <label asp-for="Documento" class="form-control">(Digite apenas números)</label>
        <input asp-for="Documento" class="form-control" />
        <span asp-validation-for="Documento" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="TipoDocumento" class="control-label">Tipo de Documento:</label>
        @Html.RadioButtonFor(m => m.TipoDocumento, "CPF") CPF
        @Html.RadioButtonFor(m => m.TipoDocumento, "CNPJ") CNPJ
        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefone)
        <label asp-for="Telefone" class="form-control">(Digite apenas números)</label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <br/><br/>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
